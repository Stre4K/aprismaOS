# Dockerfile.grub
# Minimal Ubuntu 22.04 image for ISO creation with GRUB (x86 only)

FROM ubuntu:22.04

# Install only the bare minimum packages for grub-mkrescue
RUN apt-get update && apt-get install -y --no-install-recommends \
    grub-pc-bin \
    xorriso \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Default command
CMD ["bash"]

